    "prisma:migrate": "pnpm prisma migrate deploy",
    "prisma:deploy": "pnpm prisma:generate && pnpm prisma:migrate",
    "prisma:seed": "tsx ./prisma/seed.ts",
    "prisma:dev": "pnpm prisma migrate dev && pnpm prisma generate"
  },
