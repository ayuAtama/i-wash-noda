{
  "name": "api",
  "version": "1.5.0",
  "type": "module",
  "private": true,
  "description": "Express API for i-wash-noda",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "deva": "pnpm prisma dev & tsx watch ./src/server.ts",
    "dev": "tsx watch ./src/server.ts",
    "build": "tsup --clean && prisma generate",
    "start": "node dist/server.js",
