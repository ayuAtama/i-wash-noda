    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "express": "^5.1.0",
    "express-list-endpoints": "^7.1.1",
    "express-rate-limit": "^8.2.1",
    "jose": "^6.1.3",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
